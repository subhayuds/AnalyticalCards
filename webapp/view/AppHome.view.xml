<mvc:View 
	controllerName="com.hcl.analyticalcards.controller.AppHome"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	xmlns:w="sap.ui.integration.widgets"
	xmlns:f="sap.f"
	displayBlock="true">
	<Shell id="shell" appWidthLimited="false">
		<App id="app">
			<pages>
				<Page id="page" title="{i18n>title}">
					<content>
						<VBox width="100%" class="sapUiSmallMarginTop sapUiSmallMarginBegin">
							<f:GridContainer>
								<f:layout>
									<f:GridContainerSettings rowSize="5rem" columnSize="5rem" gap="1rem" />
								</f:layout>
								<f:layoutS>
									<f:GridContainerSettings rowSize="5rem" columnSize="5rem" gap="0.5rem" />
								</f:layoutS>
								<w:Card id="cardServiceRequestsLine" action="onAction">
									<w:layoutData>
										<f:GridContainerItemLayoutData minRows="4" columns="4" />
									</w:layoutData>
								</w:Card>
								<w:Card id="cardServiceRequestsStackedColumn" action="onAction">
									<w:layoutData>
										<f:GridContainerItemLayoutData minRows="4" columns="4" />
									</w:layoutData>
								</w:Card>
								<w:Card id="cardServiceRequestsDonut" action="onAction">
									<w:layoutData>
										<f:GridContainerItemLayoutData  minRows="4" columns="4" />
									</w:layoutData>
								</w:Card>
							</f:GridContainer>
						</VBox>
					</content>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>